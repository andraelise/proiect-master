<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:id="@+id/recomandare_main_linear_layout">

    <ImageView
        android:id="@+id/recomandareImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bike">
    </ImageView>

    <LinearLayout
        android:id="@+id/recomandare_info_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activitateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Activitate"
            android:textSize="20sp"
            android:textColor="@color/colorPinkDark"
            android:textStyle="bold"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp">

        <TextView
            android:id="@+id/durataTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Durata:"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/durataValTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="30"/>

            <TextView
                android:id="@+id/minuteTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="minute"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp">

            <TextView
                android:id="@+id/frecventaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Frecventa:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/frecventaValTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="30"/>

            <TextView
                android:id="@+id/peSaptamanaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="/saptamana"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp">

            <TextView
                android:id="@+id/indicatiiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Indicatii:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/indicatiiValTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="indicatii text"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="PROGRAMEAZA"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@drawable/round_bg"
                android:onClick="clickedRecomandare"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>